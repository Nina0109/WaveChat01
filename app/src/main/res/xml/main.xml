<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="开启抢红包功能">

        <com.codeboy.qianghongbao.widget.CustomSwitchPreference
            android:defaultValue="true"
            android:title="微信"
            android:icon="@drawable/settings_ic_wechat"
            android:key="KEY_ENABLE_WECHAT"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="高级设置">
        <com.codeboy.qianghongbao.widget.CustomSwitchPreference
            android:title="监听通知栏"
            android:summary="抢红包更快更稳定"
            android:defaultValue="false"
            android:key="KEY_NOTIFICATION_SERVICE_TEMP_ENABLE"/>

        <Preference
            android:title="@string/notify_settings"
            android:key="NOTIFY_SETTINGS"/>
    </PreferenceCategory>
</PreferenceScreen>